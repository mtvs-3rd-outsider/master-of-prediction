<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.outsider.masterofprediction.mapper.UserMapper">
    <!-- 회원탈퇴 -->
    <update id="updateWithdrawalStatusByUser" >
        UPDATE TBL_USER
        SET user_withdrawal_status = #{withdrawalStatus}
        WHERE user_no = #{id}
    </update>
</mapper>
