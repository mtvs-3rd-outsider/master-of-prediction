<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.outsider.masterofprediction.mapper.UserMapper">
    <resultMap id="userAndAttachmentResultMap" type="com.outsider.masterofprediction.dto.User">
        <id property="no" column="USER_NAME"/>
        <result property="name" column="USER_NAME"/>
        <result property="email" column="USER_EMAIL"/>
        <result property="password" column="USER_PASSWORD"/>
        <result property="joinDate" column="USER_JOIN_DATE"/>
        <result property="authority" column="USER_AUTHORITY"/>
        <result property="withdrawalStatus" column="USER_WITHDRAWAL_STATUS"/>
        <result property="point" column="USER_POINT"/>

        <association property="attachment" javaType="com.outsider.masterofprediction.dto.TblAttachmentDTO">
            <id property="attachmentFileNo" column="ATTACHMENT_FILE_NO"/>
            <result property="attachmentFileAddress" column="ATTACHMENT_FILE_ADDRESS"/>
            <result property="attachmentRegistUserNo" column="ATTACHMENT_REGIST_USER_NO"/>
            <result property="answerNo" column="ANSWER_NO"/>
            <result property="inquiryNo" column="INQUIRY_NO"/>
            <result property="attachmentUserNo" column="ATTACHMENT_USER_NO"/>
            <result property="subjectNo" column="SUBJECT_NO"/>
            <result property="noticeNo" column="NOTICE_NO"/>
        </association>
    </resultMap>

    <!-- 회원탈퇴 -->
    <update id="updateWithdrawalStatusByUser" >
        UPDATE TBL_USER
        SET user_withdrawal_status = #{withdrawalStatus}
        WHERE user_no = #{id}
    </update>

    <select id="getUserProfitLossRate" parameterType="long" resultType="double">
        SELECT
            (SUM(CASE
                     WHEN s.subject_finish_result = '승리' THEN bo.order_amount * (s.subject_total_yes_point / s.subject_total_no_point)
                     ELSE -bo.order_amount
                END) / SUM(bo.order_amount)) * 100 AS profit_loss_rate
        FROM
            TBL_USER u
                JOIN
            TBL_BETTING_ORDER bo ON u.user_no = bo.order_user_no
                JOIN
            TBL_SUBJECT s ON bo.order_subject_no = s.subject_no
        WHERE
            u.user_no = #{userNo}
        GROUP BY
            u.user_no, u.user_name, u.user_email;
    </select>

    <select id="findRank" resultMap="userResultMap">
        SELECT
                A.USER_NAME
                , A.USER_POINT
                , B.ATTACHMENT_FILE_ADDRESS
        FROM
                TBL_USER A
                JOIN TBL_ATTACHMENT B ON (A.USER_NO = B.ATTACHMENT_USER_NO)
        ORDER BY
            A.USER_POINT
    </select>
</mapper>
